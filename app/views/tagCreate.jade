extends layout

block content

    .row
        .small-10.columns

            h1.left= title
            form(method="post", enctype='application/x-www-form-urlencoded' action="/tag/update")
                .row
                    .large-10.columns
                        label Tag Name
                .row
                    .large-10.columns
                        input(type="text", size=60 name="name")

                .row
                    .large-10.columns
                        input(type="text", size=60 name="url")

                .row
                    .large-10.columns
                        input(type="radio", name="type", value="adm" checked=collType=='adm')
                        | <label>Administrative Area &nbsp;&nbsp;</label>
                        input(type="radio", name="type", value="sub" checked=collType=='sub')
                        | <label>Subject </label>


                p
                .row
                    .large-10.columns
                        input(type='submit', value='Create Tag')

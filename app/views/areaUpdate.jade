extends layout
block content
  .row
    .small-10.columns
      a.button.small.alert.radius.right(href="#" data-reveal-id="deleteModal") Delete Area
      h1.left= title
      form(method="post", enctype='application/x-www-form-urlencoded' action="/admin/area/update")
        .row
          .large-10.columns
            label Area Name
        .row
          .large-10.columns
            input(type="text", size=60 name="title" value=area.title)
        .row
          .large-10.columns
            label Area URL
        .row
          .large-10.columns
            input(type="text", size=60 name="url" value=area.url)
        .row
          .large-10.columns
            label Secondary URL
        .row
          .large-10.columns
            input(type="text", size=60 name="searchUrl" value=area.secondaryUrl)

        .row
          .small-12.columns
            label Area Description
        .row
          .small-10.columns
            textarea(rows=7, class="small-12 columns", name="description")=area.description
          .small-2.columns
        .row
          .large-10.columns
            label Area ID:
              =area.id
            input(type="hidden", name="id" value=area.id)
        p
        .row
          .large-10.columns
            input(type='submit', value='Update Area')
    #deleteModal.reveal-modal.small(data-reveal)
      h3 Delete Area
      p Are you sure you want to delete this area?
      a(href="/admin/area/delete/" + area.id) Yes, delete this area
      a(class="close-reveal-modal") &#215;
      script $(document).foundation()

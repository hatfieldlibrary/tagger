extends layout
block content
    .row
        h1= title
        form(method="post", enctype='application/x-www-form-urlencoded', action="/collection/create")
            .row
                .large-10.columns
                    label Collection Name
            .row
                .large-10.columns
                    input(type="text", class="large-10" name="name", value=collName)
            p
            .row
                .large-10.columns
                    label Collection URL
            .row
                .large-10.columns
                    input(type="text", class="large-10 columns", name="url", value=collUrl)
            p
            .row
                .large-10.columns
                    label Collection Description
            .row
                .large-10.columns
                    textarea(rows=7, class="large-10 ", name="description")=collDesc
            p
            .row
                .large-10.columns
                    label Coverage Dates
            .row
                .large-10.columns
                    textarea(rows=7, class="large-10 ", name="dates")=collDates
            p
            .row
                .large-10.columns
                    label Number of Items
            .row
                .large-10.columns
                    textarea(rows=7, class="large-10 ", name="items")=collItems
            p
            .row
                .large-10.columns
                    label Type
            .row
                .large-10.columns
                    select(name="ctype")
                        option(value="dig") Digital Collection
                        option(value="ead") Finding Aid
            p
            .row
                .large-10.columns
                    input(type="submit" value="Create Collection")

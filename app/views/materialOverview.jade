extends layout

block content

  div(layout="row")
    md-sidenav(class="md-sidenav-left", md-component-id="left", md-is-locked-open="$mdMedia('gt-md')")
      md-toolbar(class=" md-default-theme")
        div.md-card
          md-card-content
            md-list
             md-list-item.contact-item
                img.md-avatar(src="#{picture}")
              md-list-item
                div.md-subhead #{user}
      md-content
        md-list
          md-list-item
            button(class="md-no-style md-button md-default-theme" tabindex="0")
              div.md-list-item-inner
                md-icon( aria-hidden="true" style="margin: 10px;")
                  i.material-icons home
                div.list-group-item-text Overview
        md-list-item
            button(class="md-no-style md-button md-default-theme" tabindex="0")
              div.md-list-item-inner
                md-icon( aria-hidden="true" style="margin: 10px;")
                 i.material-icons content_copy
                div.list-group-item-text Collections
        md-list-item
          button(class="md-no-style md-button md-default-theme" tabindex="0")
            div.md-list-item-inner
              md-icon( aria-hidden="true" style="margin: 10px;")
                i.material-icons block
              div.list-group-item-text Restrictions
        md-list-item
           button(class="md-no-style md-button md-default-theme" tabindex="0")
             div.md-list-item-inner
               md-icon( aria-hidden="true" style="margin: 10px;")
                  i.material-icons link
               div.list-group-item-text Tags
        md-list-item
           button(class="md-no-style md-button md-default-theme" tabindex="0")
             div.md-list-item-inner
               md-icon( aria-hidden="true" style="margin: 10px;")
                   i.material-icons flag
                 div.list-group-item-text Categories
        md-list-item
            button(class="md-no-style md-button md-default-theme" tabindex="0")
              div.md-list-item-inner
                md-icon( aria-hidden="true" style="margin: 10px;")
                  i.material-icons public
                div.list-group-item-text Areas



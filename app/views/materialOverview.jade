            md-content(layout-padding flex="70" style="padding-left: 20px;")
              h3(class="md-title" style="margin-top: 10px;") Edit Collection
              md-input-container
                label Collection Name
                input(type="text", ng-model="testData.title")
              md-input-container
                label Description
                textarea(type="textarea", ng-model="testData.description")
              md-input-container
                label Coverage Dates
                input(type="text", ng-model="testData.dates")
              md-input-container
                label Item Count
                input(type="text", ng-model="testData.count")
              md-input-container
                label URL
                input(type="text", ng-model="testData.url")
              div(style="margin-bottom: 5px;")
                div.md-caption Item Type
                md-radio-group(layout="row" ng-model="testData.itemType")
                  div(flex="25")
                    md-radio-button(aria-label="Unrestricted" value="collection" style="display: inline") Collection
                  div(flex="25")
                    md-radio-button(aria-label="Restricted" value="item" style="display: inline") Item
                  div(flex="25")
                    md-radio-button(aria-label="Restricted" value="aid" style="display: inline") Finding Aid
                  span(flex)
              md-divider
              div(style="margin-top: 10px; margin-bottom: 15px;")
                div.md-caption Access Restriction
                md-radio-group(layout="row" ng-model="testData.restricted")
                  div(flex="25")
                    md-radio-button(aria-label="Unrestricted" value="yes" flex="15" style="display: inline") Unrestricted
                  div(flex="25")
                    md-radio-button(aria-label="Restricted" value="no" flex="15" style="display: inline") Restricted
                    span(flex)
              md-divider
              div(style="margin-top: 10px; margin-bottom: 15px;")
                div.md-caption Link Type
                md-radio-group(layout="row" ng-model="testData.browseType")
                  div(flex="25")
                    md-radio-button(aria-label="Unrestricted" value="link" flex="15" style="display: inline") Link
                  div(flex="25")
                    md-radio-button(aria-label="Restricted" value="selection" flex="15" style="display: inline") Selection
                  span(flex)
              md-divider
              div(style="margin-top: 10px; margin-bottom: 15px;")
                div.md-caption Search Type
                md-radio-group(layout="row" ng-model="testData.searchType")
                  div(flex="25")
                    md-radio-button(aria-label="Unrestricted" value="both" flex="15" style="display: inline") Search & Browse
                  div(flex="25")
                    md-radio-button(aria-label="Restricted" value="browse_only" flex="15" style="display: inline") Browse Only
                  div(flex="25")
                    md-radio-button(aria-label="Restricted" value="search_only" flex="15" style="display: inline") Search Only
                  span(flex)
              md-divider
              md-input-container
                label Collection Category
                md-select(ng-model="someModel" placeholder="Select a state")
                  md-option(ng-value="opt") Personal Collection
              md-button(class="md-raised md-primary") Update Collection

extends layout
block content
    .row
        .small-10.columns
            a.button.small.alert.radius.right(href="#" data-reveal-id="deleteModal") Delete Content Type
            h1.left= title
            form(method="post", enctype='application/x-www-form-urlencoded' action="/content/update")
                .row
                    .large-10.columns
                        label Content Type
                .row
                    .large-10.columns
                        input(type="text", size=60 name="name" value=type.name)
                .row
                    .large-10.columns
                        label Content ID:
                            =type.id
                input(type="hidden", name="id" value=type.id)
                p
                .row
                    .large-10.columns
                        input(type='submit', value='Update Tag')
        #deleteModal.reveal-modal.small(data-reveal)
            h3 Delete Tag
            p Are you sure you want to delete this content type?
            a(href="/content/delete/"+type.id) Yes, delete this type
            a(class="close-reveal-modal") &#215;
            script
                $(document).foundation();
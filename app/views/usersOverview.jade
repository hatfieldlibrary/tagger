extends layout
block content
  md-content(layout="row", layout-align="start start", flex, ng-controller="UserCtrl")
    md-content(layout="column" flex="90")
      md-card.flex
        div(ng-if="user.$resolved")
        md-toolbar.md_primary
          .md-toolbar-tools
            span(flex="20")
              i.material-icons group
              span.md-subhead &nbsp;USERS
            span(flex)
        md-card-content

        md-list
          md-list-item(class="md-2-line", ng-repeat="user in users")

            div(flex="5")
            div(flex="25")
              md-input-container
                input(type="text", ng-model="user.name" aria-label="User name")
            div(flex="25")
              md-input-container
                input(type="text", ng-model="user.email" aria-label="User email")
            div(flex="25")
              md-input-container
                md-select(ng-model="user.area" aria-label="Area")
                  md-option(ng-value="area.id", ng-repeat="area in areas" ) {{area.name}}
            div(flex="5")
            div(flex="5")
              md-button(class="md-primary md-raised md-fab md-mini" aria-label="Update User" ng-click="updateUser(user.id, user.name, user.email, user.area)")
                md-tooltip Update User
                i(class="material-icons") done
            div(flex="10")
              md-button(class="md-warn md-raised md-fab md-mini" aria-label="Delete User" ng-click="deleteUser(user.id)")
                md-tooltip Delete User
                i(class="material-icons") delete



          md-list-item(class="md-2-line")
            div(flex="85")
            flex
            md-button(class="md-accent md-raised md-fab md-mini" aria-label="Add User" ng-click="newRow()")
              md-tooltip Add User
              i(class="material-icons") add
